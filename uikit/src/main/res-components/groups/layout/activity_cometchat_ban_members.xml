<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="com.cometchat.pro.uikit.ui_components.groups.banned_members.CometChatBanMembersActivity">

    <RelativeLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.appbar.MaterialToolbar
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:id="@+id/banToolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:navigationIcon="@drawable/ic_close_24dp"
            app:title="@string/banned_members"/>

        <LinearLayout
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:id="@+id/toolbar_controls"
            android:layout_alignParentEnd="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <include layout="@layout/layout_toolbar"/>
        </LinearLayout>
    </RelativeLayout>
    <FrameLayout
        android:id="@+id/ban_member_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>
